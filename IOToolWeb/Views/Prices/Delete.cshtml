@model IOToolDataLibrary.Models.CustomTables.NewPriceModel

@{
    ViewData["Title"] = "Delete";
}

@if (Model is null)
{
    <h4>The requested record was not found.</h4>
}
else
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Price Delete</h5>
                        <h6 class="card-subtitle text-muted">Action to delete a price who are registred in IOTool.</h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text">  Are you sure you want to delete the price from transporter <h2>Transporter: @Model.TransporterName</h2>with <h2>Lane name: @Model.LaneName</h2> from your list of prices?</p>
                        <form asp-action="Delete">
                            <input type="submit" value="Delete" class="btn btn-card" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

