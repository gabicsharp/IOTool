@model IOToolDataLibrary.Models.CustomTables.NewWorkRequestDeleteModel

@{ ViewData["Title"] = "Delete"; }

@if (Model is null)
{
<h4>The requested record was not found.</h4> }
else
{
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Request Delete</h5>
                    <h6 class="card-subtitle text-muted">Action to delete a request registred in IOTool.</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Delete">
                        <p class="card-text">  Are you sure you want to delete this request from tool?</p>
                        <div class="row col-lg-7 col-md-7">
                            <div class="col-lg-4 col-md-4">
                                <h5>Id</h5>
                            </div>
                            <div class="col-lg-8 col-md-8">
                                <input class="form-control select2" id="Id" name="Id" value="@Model.Id" style="width:100%;" readonly />
                                <br />
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <h5>From</h5>
                            </div>
                            <div class="col-lg-8 col-md-8">
                                <input class="form-control select2" id="From" name="From" value="@Model.From" style="width:100%;" readonly />
                                <br />
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <h5>To</h5>
                            </div>
                            <div class="col-lg-8 col-md-8">
                                <input class="form-control select2" id="To" name="To" value="@Model.To" style="width:100%;" readonly />
                                <br />
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <h5>Comment</h5>
                            </div>
                            <div class="col-lg-8 col-md-8">
                                <textarea class="form-control" id="Comment" name="Comment" rows="5" style="resize:none"></textarea>
                                @Html.ValidationMessage("Comment", "", new { @class = "text-danger" })
                                <br />
                            </div>
                        </div>
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>}