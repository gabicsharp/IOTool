@model IEnumerable<IOToolDataLibrary.Models.CustomTables.NewSupplierModel>

@{ ViewData["Title"] = "Index"; }

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Suppliers List</h5>
                    <h6 class="card-subtitle text-muted">List with all providers who are registred in IOTool.</h6>
                </div>
                <div class="card-body">
                    <table class="table table-striped" id="table_suppliers" style="width:100%">
                        <thead class="thead-grey">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Country)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Zip)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Country)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Zip)
                                    </td>
                                    <td>
                                        @if (item.Home == 0)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="align-middle mr-2 fas fa-fw fa-edit IconsTable"></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="align-middle mr-2 fas fa-fw fa-trash-alt IconsTable"></a>}
                                        @if (item.Home == 1)
                                        {
                                            <h6>Home</h6>}
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Country)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Zip)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="mb-3">
                        <a asp-action="Create" class="btn btn-card"><i class="fas fa-check"> Add a new supplier</i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$('#table_suppliers tfoot th').each(function () {
    var title = $('#example thead th').eq($(this).index()).text();
    $(this).html('<input type="text" placeholder="Search ' + title + '" />');
});

$('#table_suppliers').DataTable({
    dom: 'Bfrtip',
    buttons: [
        { extend: 'csv', title: 'IOTool All Suppliers', className: 'btn btn-table' },
        { extend: 'print', className: 'btn btn-table' }
    ],
    responsive: true,
});
var table = $('#table_suppliers').DataTable();

table.columns().every(function () {
    var that = this;

    $('input', this.footer()).on('keyup change', function () {
        that
            .search(this.value)
            .draw();
    });
});
</script>